{
  "description": "A extended example app that shows how to use MentraOS.",
  "permissions": [
    {
      "type": "MICROPHONE",
      "description": "To show transcriptions"
    }
  ],
  "settings": [
    {
      "type": "toggle",
      "key": "show_live_transcription",
      "label": "Show live transcription",
      "defaultValue": true
    }
  ],
  "tools": [
    {
      "id": "repeat_question",
      "description": "Ask AI to repeat or clarify something when user didn't understand",
      "activationPhrases": [
        "sorry can you repeat",
        "can you repeat that",
        "repeat please",
        "I didn't understand",
        "say that again"
      ],
      "parameters": {
        "question": {
          "type": "string",
          "description": "The question or topic to clarify",
          "required": false
        }
      }
    },
    {
      "id": "ask_ai",
      "description": "Ask OpenAI a question and get an answer",
      "activationPhrases": [
        "ask AI",
        "question for AI",
        "AI help me",
        "hey AI"
      ],
      "parameters": {
        "question": {
          "type": "string",
          "description": "The question to ask AI",
          "required": true
        }
      }
    }
  ]
}